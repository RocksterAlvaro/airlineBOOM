<!-- Dependency injection -->
@using Microsoft.AspNetCore.Identity;
@using airlineBOOM.Models;
@inject SignInManager<AppUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- If the user is signed in -->
    <div class="inline my-2 my-lg-0">
        <ul class="nav navbar-nav">
            <li class="nav-item m-1">
                <a class="nav-link" asp-route="homeLogin"> Hello @User.Identity.Name! </a>
            </li>

            <li class="nav-item m-1">
                <a class="btn btn-outline-danger" asp-route="homeLogout"> Logout </a>
            </li>
        </ul>
    </div>
    
}
else
{
    <!-- If the user is NOT signed in -->
    <div class="inline my-2 my-lg-0">
        <ul class="nav navbar-nav">
            <li class="nav-item m-1">
                <a class="btn btn-outline-dark" asp-route="homeLogin"> Login </a>
            </li>

            <li class="nav-item m-1">
                <a class="btn btn-outline-success btn-sm" asp-route="homeCreateUser"> Create User </a>
            </li>
        </ul>
    </div>
}